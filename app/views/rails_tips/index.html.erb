<p style="color: green"><%= notice %></p>

<h1>Rails tips</h1>

<div id="rails_tips">
  <% @rails_tips.each do |rails_tip| %>
    <%= render rails_tip %>
    <p>
      <%= link_to "Show this Rails tip", rails_tip %>
    </p>
  <% end %>
</div>

<% if Current.user %>
  <%= link_to "New Rails tip", new_rails_tip_path %>
<% end %>